{
  "title": "Polar shapes â€“ @greweb",
  "layout": [
    
    [ { children: [  "dist", "amp", "limit" ], style: {alignItems:"center"}},  {children:"curve", style: {width: 440}},  ],
    
    //[ "speed",  "rotate", "scale" ], "polygon", 

  ],
  "style": {
    "spacing": "space-around",
    /*
    "colorMain": "#ff55bb",
    "colorLive": "#aa0055",
    "bg": "radial-gradient(circle, #430926, #1c0c15)",
    dustColor: "#ff68c0",
    disabledColor: "#8a4377",
    */
  },
  "berserkBoost": 20,
  "inputs": {
    "dist": {
      "description": "distance between each line",
      "type": "Range",
      "display": "hslider",
      "decay": 0.05,
      "min": 0.1,
      "max": 4,
      "initialValue": 0.5,
      "magnitude": 1
    },
    "curve": {
      "description": "shapes the curve",
      "letters": "aqwzsxedcrfvtgbyhnujikolpm",
      //"letters": "aqwzsxeujikolpm",
      //"letters": "aeyuio",
      "type": "KeyboardCurve",
      "label": "mountain curve",
      "projection": "polar",
      "spread": 4,
      resolution: 3,
      "threshold": 0.5,
      "saturateUp": 1.1,
      "msgOffset": 3,
      "msgAmp": 20,
      "reverse": false,
      "envelope": {
        "attack": 10,
        "decay": 20,
        "sustain": 0.5,
        "release": 50
      }
    },
    "amp": {
      "description": "amplitude to draw the mountain curve with",
      "type": "Range",
      "display": "hslider",
      "decay": 0.02,
      "min": 0,
      "max": 20,
      "initialValue": 10,
      "magnitude": 1
    },
    "limit": {
      "description": "define the limit of the curve before moving to the 'sky'",
      "type": "Range",
      "display": "hslider",
      "decay": 0.02,
      "min": 0,
      "max": 1,
      "initialValue": 0.9,
      "magnitude": 1
    },

    "polygon": {
      "type": "Poll",
      "description": "define what will we draw in the sky.",
      "question": "sky shape?",
      "choices": {
        "circle": "Circle",
        "square": "square",
        "triangle": "triangle",
        "pentagon": "pentagon",
        "hexagon": "hexagon",
      }
    },
    "rotate": {
      "type": "Range",
      "description": "rotation to apply on the shape.",
      "display": "hslider",
      "decay": 0.04,
      "min": -0.2,
      "max": 0.2,
      "initialValue": 0,
      "magnitude": 2
    },
    "scale": {
      "type": "Range",
      "description": "size of the shape (in mm)",
      "display": "hslider",
      "decay": 0.04,
      "min": 1,
      "max": 20,
      "initialValue": 12,
      "magnitude": 0
    },
    "speed": {
      "type": "Range",
      "description": "speed of the shape (in mm/iteration)",
      "display": "hslider",
      "decay": 0.02,
      "min": 0.1,
      "max": 8,
      "initialValue": 3,
      "magnitude": 0,
    },
  }
}
